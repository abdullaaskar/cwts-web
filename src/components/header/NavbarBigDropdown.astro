---
import OptionalLink from "@components/common/OptionalLink.astro";
import type { MenuItem } from "@data/menu";

export interface Props {
    items: MenuItem[];
}

const { items } = Astro.props;
---

<div class="bg-violet flex flex-row flex-wrap p-1.5">
    {
        items.map((item) => (
            <div class="basis-1/3 p-0.5">
                <div class="border-b border-white mr-5 mb-1">
                    <OptionalLink link={item} />
                </div>
                {item.children && (
                    <ul class="text-sm ml-2">
                        {item.children.map((subItem) => (
                            <li>
                                <OptionalLink link={subItem} />
                            </li>
                        ))}
                    </ul>
                )}
            </div>
        ))
    }
</div>
