---
export interface Props {
  id: string;
  title: string;
  width?: number;
  height?: number;
}

const { id, title, width = 400, height = 250 } = Astro.props;

const playerUrl = `https://player.vimeo.com/video/${id}`;
---

<figure>
  <iframe
    src={playerUrl}
    width={width}
    height={height}
    loading="lazy"
    allowfullscreen="allowfullscreen"></iframe>
  <figcaption>{title}</figcaption>
</figure>
