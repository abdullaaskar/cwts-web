---
import { Icon } from "astro-icon";
import Container from "@components/common/Container.astro";
import Button from "@components/common/Button.astro";

export interface Props {
  title: string;
  moreText?: string;
  moreLink?: string;
  classNames?: string[];
  titleClass?: string[];
  moreClass?: string[];
  moreArrowClass?: string[];
}

const {
  title,
  moreText,
  moreLink,
  classNames,
  titleClass,
  moreClass,
  moreArrowClass,
} = Astro.props;
---

<div class:list={[...(classNames || [])]}>
  <Container classList={["md:py-12 py-6"]}>
    <div class:list={["flex justify-between items-center md:pb-6 pb-5"]}>
      <div class:list={["widget-title", ...(titleClass || [])]}>{title}</div>
      {
        moreText && (
          <div>
            <Button
              url={moreLink}
              text={moreText}
              classNames={["btn-xl", ...(moreClass || [])]}
            />
          </div>
        )
      }
    </div>
    <slot />
  </Container>
</div>
