---
import Section from "@layouts/Section.astro";
import SectionTitleCover from "@layouts/SectionTitleCover.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { getLanguageBySlug } from "@libs/language";

export async function getStaticPaths() {
  const pages = await getCollection("pages", (page) =>
    page.slug.endsWith("about/statement-of-faith")
  );

  return pages.map((page) => ({
    params: {
      language: getLanguageBySlug(page.slug),
    },
    props: {
      page,
    },
  }));
}

export interface Props {
  page: CollectionEntry<"pages">;
}

const { page } = Astro.props;
const { title } = page.data;
const { Content } = await page.render();
---

<SectionTitleCover
  title={title}
  slug={page.slug}
  titleCover="/img/statement-of-faith-bg.jpg"
  proseClassList={[
    "prose-p:text-darkviolet",
    "prose-p:font-semibold",
    "prose-p:text-2xl",
    "prose-ul:text-darkblue",
  ]}
>
  <Content />
</SectionTitleCover>
