---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>

		<style lang="scss" is:global>
			@import "./global";
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>
