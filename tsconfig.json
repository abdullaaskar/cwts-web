// [Typescript guide](https://docs.astro.build/en/guides/typescript/)
{
  // https://docs.astro.build/en/guides/typescript/#setup
  "extends": "astro/tsconfigs/strict",
  // https://docs.astro.build/en/guides/typescript/#import-aliases
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ]
    }
  }
}